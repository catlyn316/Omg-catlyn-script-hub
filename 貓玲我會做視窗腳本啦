-- 保存當前設定的假名
local currentFakeName = "catlyn"

-- 假名輸入框
local nameBox = Instance.new("TextBox", CommonButtonsScroll)
nameBox.Size = UDim2.new(0, 160, 0, 30)
nameBox.PlaceholderText = "輸入假名"
